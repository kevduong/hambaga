{{!-- Add new burger --}}
<div style="text-align: center">
<h2>Add new burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">New burgers I'd like to try:</label>
    <input type="text" id="ca" name="burger_name">
  </div>
  <button type="submit">Submit</button>
</div>
{{!-- Burger Wishlist --}}
<h2>Burgers to try:</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">devoured</button>
        </form>

        {{> burger/delete-burger}}
      </li>
    {{/if}}
  {{/each}}
</ul>
</form>

{{!-- Devoured Burgers --}}
<h2>Devoured Burgers</h2>
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">remove</button>
        </form>
        {{> burger/delete-burger}}
      </li>
    {{/unless}}
  {{/each}}
</ul>
